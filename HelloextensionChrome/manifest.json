{
  "manifest_version": 3,
  "name": "My First Extension",
  "version": "1.0",
  "description": "This is my first Chrome extension!",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "contextMenus", "storage"]
}
